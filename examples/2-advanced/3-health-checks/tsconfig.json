{
  "compilerOptions":
  {
    "target": "es2022",
    "module": "es2022",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["cache", "dist", "node_modules"]
}
