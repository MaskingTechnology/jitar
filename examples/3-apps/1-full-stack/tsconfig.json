{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react",
    "module": "es2022",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["cache", "dist", "node_modules"]
}
