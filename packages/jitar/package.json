{
    "name": "jitar",
    "version": "0.4.0",
    "description": "Distributed runtime for JavaScript and TypeScript to chop monolithic applications into micros.",
    "author": "Masking Technology <info@masking.tech> (https://jitar.dev)",
    "license": "MIT",
    "type": "module",
    "types": "./dist/lib.d.ts",
    "sideEffects": true,
    "exports": {
        ".": "./dist/lib.js",
        "./server": "./dist/server.js",
        "./client": "./dist/client.js"
    },
    "scripts": {
        "lint": "eslint . --ext .ts",
        "validate": "tsc -p tsconfig.json --noEmit",
        "build": "npm run clean && rollup -c",
        "clean": "rm -rf dist",
        "release": "npm run clean && npm run build && npm publish"
    },
    "dependencies": {
        "express": "^4.18.2",
        "express-http-proxy": "^1.6.3",
        "fs-extra": "^11.1.1",
        "glob-promise": "6.0.3",
        "mime-types": "^2.1.35",
        "tslog": "^4.8.2",
        "yargs": "^17.7.2",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@jitar/runtime": "^0.4.0",
        "@jitar/server-nodejs": "^0.4.0"
    },
    "engines": {
        "node": ">=18.7"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MaskingTechnology/jitar"
    },
    "bugs": {
        "url": "https://github.com/MaskingTechnology/jitar/issues"
    },
    "homepage": "https://jitar.dev",
    "keywords": [
        "distributed",
        "runtime",
        "javascript",
        "typescript",
        "microservices",
        "monolith",
        "full stack",
        "web applications"
    ]
}