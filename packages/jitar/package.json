{
    "name": "jitar",
    "version": "0.3.4",
    "description": "Distributed runtime for JavaScript and TypeScript to chop monolithic applications into micros.",
    "author": "Masking Technology <info@masking.tech> (https://jitar.dev)",
    "license": "MIT",
    "type": "module",
    "types": "dist/lib.d.ts",
    "sideEffects": true,
    "exports": {
        ".": "./dist/lib.js",
        "./client.js": "./dist/client.js",
        "./hooks.js": "./dist/hooks.js"
    },
    "scripts": {
        "test": "vitest run",
        "test-coverage": "vitest run --coverage",
        "lint": "eslint . --ext .ts",
        "build": "tsc -p tsconfig.json",
        "clean": "rm -rf dist build",
        "release": "npm run clean && npm run build && npm publish"
    },
    "dependencies": {
        "jitar-reflection": "^0.3.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "@vitest/coverage-c8": "^0.28.5",
        "eslint": "^8.34.0",
        "vitest": "^0.28.5"
    },
    "engines": {
        "node": ">=18.7"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MaskingTechnology/jitar"
    },
    "bugs": {
        "url": "https://github.com/MaskingTechnology/jitar/issues"
    },
    "homepage": "https://jitar.dev",
    "keywords": [
        "distributed",
        "runtime",
        "javascript",
        "typescript",
        "microservices",
        "monolith",
        "full stack",
        "web applications"
    ]
}
