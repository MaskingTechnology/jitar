    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@jitar/build": "*",
    "@jitar/configuration": "*",
    "@jitar/sourcing": "*",
    "@jitar/http": "*",
    "@jitar/runtime": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaskingTechnology/jitar.git"
  },
  "bugs": {
