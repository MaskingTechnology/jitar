{
  "name": "@jitar/cli",
  "version": "0.7.4",
  "description": "CLI tool for the Jitar runtime.",
  "author": "Masking Technology <info@masking.tech> (https://jitar.dev)",
  "license": "MIT",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest run",
    "test-coverage": "vitest run --coverage",
