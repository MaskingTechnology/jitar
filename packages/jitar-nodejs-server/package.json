        "fs-extra": "^11.1.0",
        "glob-promise": "6.0.2",
        "jitar": "^0.3.9",
        "mime-types": "^2.1.35",
        "tslog": "^4.8.2",
        "yargs": "^17.7.1"
    },
    "engines": {
        "node": ">=18.7"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MaskingTechnology/jitar"
    },
    "bugs": {
        "url": "https://github.com/MaskingTechnology/jitar/issues"
