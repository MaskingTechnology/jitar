{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}