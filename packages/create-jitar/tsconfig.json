{
    "compilerOptions": {
      "outDir": "dist",
      "target": "ESNext",
      "module": "ESNext",
      "rootDir": "./src/",
      "moduleResolution": "Node",
      "strict": true,
      "skipLibCheck": true,
      "declaration": false,
      "sourceMap": false,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "removeComments": true
    },
    "exclude": [
      "vite.config.ts",
      "node_modules",
      "dist",
      "templates"
  ]
}