{
  "name": "jitar-monorepo",
  "version": "0.9.1",
  "private": true,
  "description": "Monorepo configuration for Jitar.",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*",
    "tools/*",
    "examples/**/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=jitar --filter=create-jitar --filter=@jitar/plugin*",
    "build:examples": "turbo run build --filter=*-example",
    "build:all": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "review": "turbo run test lint",
    "publish": "npx turbo publish --no-git-tag-version --no-private",
    "changeset": "npx changeset",
    "changeset-version": "npx changeset version"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.19.0",
    "@nx/eslint-plugin": "^20.4.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@vitest/coverage-v8": "^3.0.5",
    "degit": "^2.8.4",
    "eslint": "^9.19.0",
    "eslint-plugin-jitar": "0.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "rollup": "^4.32.1",
    "rollup-plugin-dts": "^6.1.1",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vitest": "^3.0.5"
  },
  "optionalDependencies": {
    "@nrwl/nx-linux-x64-gnu": "^15.9.3"
  },
  "packageManager": "npm@11.1.0"
}
