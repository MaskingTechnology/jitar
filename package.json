{
  "name": "jitar-monorepo",
  "version": "0.9.3",
  "private": true,
  "description": "Monorepo configuration for Jitar.",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*",
    "tools/*",
    "examples/**/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=jitar --filter=create-jitar --filter=@jitar/plugin*",
    "build:examples": "turbo run build --filter=*-example",
    "build:all": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "review": "turbo run test lint",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "changeset": "npx changeset"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.2",
    "@eslint/js": "^9.28.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^3.0.1",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@vitest/coverage-v8": "^3.2.3",
    "degit": "^2.8.4",
    "eslint": "^9.28.0",
    "eslint-plugin-jitar": "0.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "rollup": "^4.43.0",
    "rollup-plugin-dts": "^6.2.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.2.3"
  },
  "optionalDependencies": {
    "@nrwl/nx-linux-x64-gnu": "^15.9.3"
  },
  "packageManager": "npm@11.1.0"
}
